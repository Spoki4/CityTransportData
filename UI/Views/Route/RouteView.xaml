<Window x:Class="UI.Views.Route.RouteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:local="clr-namespace:UI.Views.Route"
        Title="{DynamicResource DriverWindowTitle}" Height="300" Width="300">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <WrapPanel VerticalAlignment="Center" Margin="10, 0">
                <Button Name="Create" Content="Создать"></Button>
            </WrapPanel>

            <DataGrid Grid.Row="1" IsReadOnly="True" AutoGenerateColumns="False" x:Name="Routes">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="cal:Message.Attach" Value="[MouseDoubleClick] = [Action RowSelect($dataContext)]"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding Id}"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
